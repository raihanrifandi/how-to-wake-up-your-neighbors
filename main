#include <iostream>
#include <windows.h>
#include <conio.h>
#include <stdio.h>
#include <stdlib.h> 
using namespace std;

void color(int color) // Main Menu Highlighter
{
    SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE),color);
}

void gotoxy(int x, int y) // Main Menu Highlighter
{
    COORD c;
    c.X=x;
    c.Y=y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),c);
}

void main_menu()
{
    int Set[] = {7,7,7,7};
    int counter = 3;
    char key;

    for(int i=0;;)
    {
        gotoxy(45,5);
        color(Set[0]);
        cout<<"1. Play";

        gotoxy(45,6);
        color(Set[1]);
        cout<<"2. Score";

        gotoxy(45,7);
        color(Set[2]);
        cout<<"3. Help";

        gotoxy(45,8);
        color(Set[3]);
        cout<<"4. About Us";

        key = _getch();

        if(key == 72 && (counter >=2 && counter <= 5))
        {
            counter--;
        }
        if(key == 80 && (counter >=1 && counter <= 4))
        {
            counter++;
        }
        if(key == '\r')
        {
            if(counter == 1)
            {
            	cout << "Play" ;// Jika user memilih pilihan 1, maka game akan dimulai dengan variable boolean sebagai penghubung
            }
            if(counter == 2)
            {
                cout<<" Leaderboard "; // Jika user memilih pilihan 2, maka program akan menampilkan leaderboard (sorting data)
            }
            if(counter == 3)
            {
                cout<<" How to play"; // Jika user memilih pilihan 3, maka program akan menampilkan panduan bermain game
            }
            if(counter == 4)
            {
                cout<<" TEAM 15 "; // Jika user memilih pilihan 3, maka program akan menampilkan deskripsi tentang kelompok 15 beserta game yang akan dibuat
            }
        }

        Set[0] = 7;
        Set[1] = 7;
        Set[2] = 7;
        Set[3] = 7;
        Set[4] = 7;

        if(counter == 1)
        {
            Set[0] = 12;
        }
        if(counter == 2)
        {
            Set[1] = 12;
        }
        if(counter == 3)
        {
            Set[2] = 12;
        }
        if(counter == 4)
        {
            Set[3] = 12;
        }
    }
}

int main () {
	
	main_menu();

}
