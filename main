void keyboardInput()
{
	initscr();
    // declare variable
    char ch;
    printf("Enter key ESC to exit \n");
    // define infinite loop for taking keys
    while (1) {
        if (kbhit) {
            // fetch typed character into ch
            ch = getch();
            if ((int)ch == 27)
            	game_over(true);
                // when esc button is pressed, then it will exit from loop
                break;
            printf("%c", ch);
        }
    }
}

void score(){
	
	int getScore=0;
	
	
}

void color(int color) // Main Menu Highlighter
{
    SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE),color);
}

void gotoxy(int x, int y) // Main Menu Highlighter
{
    COORD c;
    c.X=x;
    c.Y=y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),c);
}

void main_menu()
{
	system("cls");
    int Set[] = {7,7,7,7};
    int counter = 3;
    char key;

    for(int i=0;;)
    {
    	gotoxy(50,15);
        color(Set[0]);
        cout<<"1. Play";

        gotoxy(50,16);
        color(Set[1]);
        cout<<"2. Score";

        gotoxy(50,17);
        color(Set[2]);
        cout<<"3. Help";

        gotoxy(50,18);
        color(Set[3]);
        cout<<"4. About Us";

        key = _getch();

        key = _getch();

        if(key == 72 && (counter >=2 && counter <= 5))
        {
            counter--;
        }
        if(key == 80 && (counter >=1 && counter <= 4))
        {
            counter++;
        }
        if(key == '\r')
        {
            if(counter == 1)
            {
            	keyboardInput();
            }
            if(counter == 2)
            {
               
            }
            if(counter == 3)
            {
               
            }
            if(counter == 4)
            {
            
            }
        }

        Set[0] = 7;
        Set[1] = 7;
        Set[2] = 7;
        Set[3] = 7;
        Set[4] = 7;

        if(counter == 1)
        {
            Set[0] = 11;
        }
        if(counter == 2)
        {
            Set[1] = 12;
        }
        if(counter == 3)
        {
            Set[2] = 13;
        }
        if(counter == 4)
        {
            Set[3] = 14;
        }
    }
}

int main () {
	string filename = "header.txt";
	header(filename);
	help();

	
	return 0;
}
