void main_menu()
{
	system("cls");
    int Set[] = {7,7,7,7};
    int counter = 3;
    char key;

    for(int i=0;;)
    {
    	gotoxy(50,5);
        color(Set[0]);
        cout<<"1. Play";

        gotoxy(50,6);
        color(Set[1]);
        cout<<"2. Score";

        gotoxy(50,7);
        color(Set[2]);
        cout<<"3. Help";

        gotoxy(50,8);
        color(Set[3]);
        cout<<"4. About Us";

        key = _getch();

        key = _getch();

        if(key == 72 && (counter >=2 && counter <= 5))
        {
            counter--;
        }
        if(key == 80 && (counter >=1 && counter <= 4))
        {
            counter++;
        }
        if(key == '\r')
        {
            if(counter == 1)
            {
            
            }
            if(counter == 2)
            {
               
            }
            if(counter == 3)
            {
               
            }
            if(counter == 4)
            {
            
            }
        }

        Set[0] = 7;
        Set[1] = 7;
        Set[2] = 7;
        Set[3] = 7;
        Set[4] = 7;

        if(counter == 1)
        {
            Set[0] = 12;
        }
        if(counter == 2)
        {
            Set[1] = 12;
        }
        if(counter == 3)
        {
            Set[2] = 12;
        }
        if(counter == 4)
        {
            Set[3] = 12;
        }
    }
}

int main () {
	main_menu();
}
